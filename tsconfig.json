{
  "compilerOptions": {
    "module": "ES2020",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "lib": ["ES2020"],
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": false,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "removeComments": true,
    "noUnusedLocals": true,
    "outDir": "scripts",
    "emitDeclarationOnly": true,
    "declaration": true
  },
  "include": ["**/src"],
  "exclude": ["**/scripts", "node_modules"]
}
